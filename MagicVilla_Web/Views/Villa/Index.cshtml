@model IEnumerable<MagicVilla_Web.Models.Dto.VillaDTO>

<div class="container bg-white rounded shadow p-4 mt-4">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">Villa List</h1>
        </div>
        <div class="col text-end pt-1">
            <a asp-controller="Villa" asp-action="Create" class="btn btn-outline-primary">
                <i class="bi bi-plus-square-fill"></i> Create New Villa
            </a>
        </div>
    </div>

    <table class="table table-hover">
        <thead>
            <tr>
                <th>Name</th>
                <th>Occupancy</th>
                <th>Price</th>
                <th class="w-actions text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Occupancy</td>
                    <td>@((item.Rate).ToString("c"))</td>
                    <td class="text-center">
                        <a asp-controller="Villa" asp-action="Update" asp-route-villaId="@item.Id" class="btn btn-outline-success">
                            <i class="bi bi-pencil-square"></i>
                        </a>
                        <a asp-controller="Villa" asp-action="Delete" asp-route-villaId="@item.Id" class="btn btn-outline-danger">
                            <i class="bi bi-trash-fill"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>