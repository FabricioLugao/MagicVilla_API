@model MagicVilla_Web.Models.ViewModels.VillaNumberDeleteVM

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<form asp-action="Delete" method="post">
    <div class="container border p-3">
        <h1 class="text-primary">Delete Villa Number</h1>

        <hr />

        <input type="hidden" asp-for="VillaNumber.VillaNo" />

        <div class="row">
            <div class="col-2">
                <label asp-for="VillaNumber.VillaNo" class="control-label pt-2" style="font-size: 20px"></label>
            </div>
            <div class="col-10 pb-3">
                <input disabled asp-for="VillaNumber.VillaNo" class="form-control" />
            </div>

            <div class="col-2">
                <label asp-for="VillaNumber.VillaId" class="control-label pt-2" style="font-size: 20px"></label>
            </div>
            <div class="col-10 pb-3">
                <select disabled asp-for="VillaNumber.VillaId" class="form-select" asp-items="@Model.VillaList">
                    <option disabled selected>Select Villa</option>
                </select>
            </div>

            <div class="col-2">
                <label asp-for="VillaNumber.SpecialDetails" class="control-label pt-2" style="font-size: 20px"></label>
            </div>
            <div class="col-10 pb-3">
                <textarea disabled asp-for="VillaNumber.SpecialDetails" class="form-control"></textarea>
            </div>

            <div class="col-5 offset-2">
                <a asp-action="Index" class="btn-outline-primary btn form-control">Back to list</a>
            </div>
            <div class="col-5">
                <input type="submit" class="btn btn-danger form-control" value="Delete" />
            </div>
        </div>
    </div>
</form>